<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView" >

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.iri16.iri16.MainActivity"
    android:background="@drawable/fondo">


                <TextView
                    android:layout_width="275dp"
                    android:layout_height="36dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/titulo"
                    android:id="@+id/titulo"
                    android:layout_row="2"
                    android:layout_column="13"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentRight="false"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_alignParentBottom="false"
                    android:textColor="#ffffff"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACERCA "
                    android:id="@+id/acercade"


                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/buttonVerCard"
                    android:layout_marginTop="26dp"
                    android:layout_alignParentLeft="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONTROL DEL CARRO"
                    android:id="@+id/buttonVerCard"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="40dp"
                    android:layout_below="@+id/titulo"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true" />

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Direccion IP :"
                android:id="@+id/textViewDirIP"
                android:textColor="#ffffff"
                android:layout_alignBottom="@+id/ip"
                android:layout_alignEnd="@+id/buttonVerCard"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignLeft="@+id/buttonVerCard" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New ToggleButton"
                android:id="@+id/conexion"


                android:layout_marginTop="26dp"
                android:layout_marginLeft="20dp"
                android:checked="false"
                android:enabled="true"
                android:textOff="Conectar"
                android:textOn="Desconectar"
                android:layout_below="@+id/acercade"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_marginTop="350dp"
                android:indeterminate="false"
                android:layout_alignStart="@+id/conexion"
                android:layout_below="@+id/conexion"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/ip"
                android:thumb="@drawable/mario"
                android:progressDrawable="@drawable/firespirit"

                />

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Velocidad"
                android:id="@+id/textViewSeekbar"
               android:layout_alignTop="@+id/seekBar"
               android:layout_alignEnd="@+id/titulo"
              android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/dirIP"
        android:textColor="#ffffff"
        android:textColorHint="#a69e9e"
        android:hint="ej:127.0.0.1"
        android:numeric="decimal"
        android:layout_alignBottom="@+id/conexion"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/conexion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:selectAllOnFocus="true"
        android:focusableInTouchMode="true">
      <requestFocus />
    </EditText>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ip"
        android:textColor="#ffffff"
        android:layout_below="@+id/titulo"
        android:text="ip"
        android:layout_toEndOf="@+id/buttonVerCard"
        android:layout_alignParentStart="false"
        android:hint="ip" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:thumb="@drawable/wifi"
        android:layout_below="@+id/conexion"
        android:progressDrawable="@drawable/seekbar"
        android:layout_alignStart="@+id/conexion"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        android:indeterminate="false"
        android:layout_toStartOf="@+id/Textseekbar2"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Señal"
        android:id="@+id/Textseekbar2"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/seekBar2"
        android:layout_alignStart="@+id/Textseekbar3"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar3"
        android:thumb="@drawable/crash"
        android:layout_alignStart="@+id/conexion"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/buttonVerCard"
        android:layout_below="@+id/seekBar2"
        android:layout_marginTop="30dp"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Señal"
        android:id="@+id/Textseekbar3"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/seekBar3"
        android:layout_alignStart="@+id/Textseekbar4"
        android:layout_alignParentRight="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar4"
        android:thumb="@drawable/tails"
        android:layout_below="@+id/seekBar3"
        android:layout_alignParentStart="true"
        android:indeterminate="false"
        android:layout_alignEnd="@+id/buttonVerCard"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Señal"
        android:id="@+id/Textseekbar4"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/seekBar4"
        android:layout_alignStart="@+id/textViewSeekbar"
        android:layout_alignParentRight="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar5"
        android:thumb="@drawable/wifi"
        android:layout_alignTop="@+id/Textseekbar5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonVerCard"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Señal"
        android:id="@+id/Textseekbar5"
        android:textColor="#ffffff"
        android:layout_below="@+id/seekBar4"
        android:layout_alignStart="@+id/Textseekbar4"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textview7"
        android:textColor="#ffffff"
        android:textColorHint="#a69e9e"
        android:layout_above="@+id/conexion"
        android:layout_alignEnd="@+id/titulo"
        android:hint="Estado conexion " />


</RelativeLayout>
    </ScrollView>